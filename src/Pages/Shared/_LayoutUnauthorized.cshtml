<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CASHTRACK @ViewData["Title"]</title>
    @await Html.PartialAsync("_Favicons")
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" asp-append-version="false">
</head>
<body>
    <header sticky="top" class="d-flex justify-content-end flex-md-nowrap p-0 bg-primary">
        <div class="mx-3 mt-3">
            <ul class="d-flex list-unstyled">
                <li class="mx-3 d-flex">
                    <a class="align-self-center text-white" asp-page="About"><h5>About</h5></a>
                </li>
                <li class="mx-3 d-flex">
                    <a class="align-self-center text-white" asp-page="Download"><h5>Download</h5></a>
                </li>
                <li class="mx-3 d-flex">
                    <a class="align-self-center text-white" asp-page="HowToBudget"><h5>How To Budget</h5></a>
                </li>
                <li class="mx-3">
                    <a asp-page="/Monthly" class="text-white d-flex align-items-center">
                        <h5>View Demo</h5> <i class="bi bi-box-arrow-in-right text-white logout-button ms-2"></i>
                    </a>
                </li>
            </ul>
        </div>
    </header>
    <main>
            @await Html.PartialAsync("_LoadingSpinner")
            @RenderBody()
    </main>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js"></script>
</body>
</html>