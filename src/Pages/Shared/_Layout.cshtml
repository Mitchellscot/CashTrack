<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CashTrack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Bungee&display=swap" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" asp-append-version="true">
    <!-- jQuery UI Autocomplete Dropdown -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
</head>
<body>
    <header>
        <nav sticky="top" class="d-flex justify-content-between flex-md-nowrap p-0 shadow bg-primary">
            <a href="/" class="d-flex justify-content-center navbar-brand col-md-2 col-lg-2 md-0 px-0 py-1">
                <span class="logo text-white pt-1 text-nowrap">Cash Track</span>
            </a>
            <div class="p-2 mx-3">
                <partial name=_LoginPartial />
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- sidebar goes here -->
            <nav class="sidebar col-md-2 col-lg-2 d-md-block bg-light collapse pt-3 px-4 sidebar-sticky container">
                <div class="nav bungee row sidebar-heading align-items-center">

                    <div class="col-lg-9 col-md-6 nav-link bungee">
                        <a class="text-primary" asp-page="/expenses/index">
                            Expenses
                        </a>
                    </div>
                    <div class="col-2 col-md-2">
                        <a class="text-primary" asp-page="/expenses/index">
                            <i class="bi bi-receipt text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </a>
                    </div>
                </div>

                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee">
                        <a class="text-primary" asp-page="/income/index">
                            Income
                        </a>
                    </div>
                    <div class="col-2">
                        <a class="text-primary" asp-page="/income/index">
                            <i class="bi bi-cash-coin text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </a>
                    </div>
                </div>
                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee">
                        <a class="text-primary" asp-page="/merchants">
                            Merchants
                        </a>
                    </div>
                    <div class="col-2">
                        <a class="text-primary" asp-page="/merchants">
                            <i class="bi bi-shop text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </a>
                    </div>
                </div>

                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee">
                        <a class="text-primary" asp-page="/categories">
                            Categories
                        </a>
                    </div>
                    <div class="col-2">
                        <a class="text-primary" asp-page="/categories">
                            <i class="bi bi-diagram-3 text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </a>
                    </div>
                </div>
                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee">
                        <a class="text-primary" asp-page="/budget">
                            Budget
                        </a>
                    </div>
                    <div class="col-2">
                        <a class="text-primary" asp-page="/budget">
                            <i class="bi bi-pie-chart text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </a>
                    </div>
                </div>
                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee">
                        <a class="text-primary" asp-page="/settings">
                            Settings
                        </a>
                    </div>
                    <div class="col-2">
                        <a class="text-primary" asp-page="/settings">
                            <i class="bi bi-gear text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </a>
                    </div>
                </div>
                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee">
                        <a class="text-primary" asp-page="/review">
                            Review
                        </a>
                    </div>
                    <div class="col-2">
                        <a class="text-primary" asp-page="/Review/Expenses">
                            <i class="bi bi-clipboard-check text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </a>
                    </div>
                </div>
            </nav>
            <!-- end -->
            <div class="col ml-sm-auto my-1 col-md-10 col-lg-10">
                <main role="main" class="d-flex flex-wrap flex-md-nowrap pt-2 border border-bottom-0 rounded-top">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>