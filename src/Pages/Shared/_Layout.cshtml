<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CASHTRACK @ViewData["Title"]</title>
    @await Html.PartialAsync("_Favicons")
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" asp-append-version="false">
</head>
<body>
    <header sticky="top" class="d-flex justify-content-between flex-md-nowrap p-0 bg-primary">
        <a asp-page="/" class="d-flex justify-content-center brand col-md-2">
            <span class="logo text-white pt-1 text-nowrap">Cash Track</span>
        </a>
        <div class="p-2 mx-3">
            <partial name=_LoginPartial />
        </div>
    </header>
    <div class="row d-flex">

        @await Html.PartialAsync("_Sidebar")
        <div class="sidebar-background-color col-md-2 col-lg-2 d-md-block bg-light collapse mx-1"></div>

        <main class="col col-md-10 col-lg-10 d-flex flex-wrap flex-md-nowrap pt-2 border border-bottom-0 rounded-top">
            @await Html.PartialAsync("_LoadingSpinner")
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>