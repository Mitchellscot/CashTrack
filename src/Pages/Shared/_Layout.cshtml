<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] CashTrack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/@(nameof(CashTrack)).styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Bungee&display=swap" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" asp-append-version="true">
    <!-- jQuery UI Autocomplete Dropdown -->
    <link rel="stylesheet" href="~/lib/jquery-ui.min.css" asp-append-version="true" />
</head>
<body>
    <header sticky="top" class="d-flex justify-content-between flex-md-nowrap p-0 shadow bg-primary">
        <a href="/" class="d-flex justify-content-center brand col-md-2">
            <span class="logo text-white pt-1 text-nowrap">Cash Track</span>
        </a>
        <div class="p-2 mx-3">
            <partial name=_LoginPartial />
        </div>
    </header>
    <div class="row d-flex">
        <!-- sidebar goes here -->
        <nav class="sidebar col-md-2 col-lg-2 d-md-block bg-light collapse container">
            <div class="nav bungee row sidebar-heading align-items-center">
                <div class="col-lg-9 col-md-6 nav-link pb-0">
                    <button type="button" class="text-primary fakeLink">
                        <a asp-page="/Index" class="text-primary spin-it">Dashboard</a>
                    </button>
                </div>
                <div class="col-2">
                    <button type="button" class="text-primary fakeLink" asp-page="/Index">
                        <a asp-page="/Index">
                            <i class="bi bi-speedometer2 text-primary d-none d-xl-block icon-size-xl"></i>
                        </a>
                    </button>
                </div>
            </div>
            <div class="nav bungee row sidebar-heading align-items-center">
                <div class="col-lg-9 col-md-6 nav-link bungee pb-0">
                    <button type="button" class="text-primary fakeLink" data-bs-toggle="collapse" data-bs-target="#expenseSubLinks">
                        Expenses
                    </button>
                </div>
                <div class="col-2 col-md-2 pb-0">
                    <button type="button" class="text-primary fakeLink" data-bs-toggle="collapse" data-bs-target="#expenseSubLinks">
                        <i class="bi bi-receipt-cutoff text-primary d-none d-xl-block icon-size-xl"></i>
                    </button>
                </div>
                <div class="collapse mt-0" id="expenseSubLinks">
                    <div class="mx-0 px-0">
                        <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                            <i class="bi bi-card-list text-dark d-none d-xl-block font-weight-bold icon-size-md"></i>&nbsp;
                            <a class="text-dark spin-it" asp-page="/Expenses/Index">
                                Expense List
                            </a>
                        </div>
                        <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                            <i class="bi bi-shop text-dark d-none d-xl-block font-weight-bold icon-size-md"></i>&nbsp;
                            <a class="text-dark spin-it" asp-page="/Merchants/Index">
                                Merchants
                            </a>
                        </div>
                        <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                            <i class="bi bi-diagram-2 text-dark d-none d-xl-block font-weight-bold icon-size-md"></i>&nbsp;
                            <a class="text-dark spin-it" asp-page="/SubCategories">
                                Sub Categories
                            </a>
                        </div>
                        <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                            <i class="bi bi-diagram-3 text-dark d-none d-xl-block font-weight-bold icon-size-md"></i>&nbsp;
                            <a class="text-dark spin-it" asp-page="/MainCategories">
                                Main Categories
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="nav bungee row sidebar-heading align-items-center">
                <div class="col-lg-9 col-md-6 nav-link bungee pb-0" data-bs-toggle="collapse" data-bs-target="#incomeSubLinks">
                    <button type="button" class="text-primary fakeLink">
                        Income
                    </button>
                </div>
                <div class="col-2 pb-0" data-bs-toggle="collapse" data-bs-target="#incomeSubLinks">
                    <button type="button" class="text-primary fakeLink" data-bs-toggle="collapse" data-bs-target="#incomeSubLinks">
                        <i class="bi bi-cash-coin text-primary d-none d-xl-block icon-size-xl"></i>
                    </button>
                </div>
                <div class="collapse" id="incomeSubLinks">
                    <div class="mx-0 px-0">
                        <div class="d-xl-inline-flex ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-3 my-2  align-content-center">
                            <i class="bi bi-card-list text-dark d-none d-xl-block font-weight-bold icon-size-md"></i>&nbsp;
                            <a class="text-dark spin-it" asp-page="/Income/Index">
                                Income List
                            </a>
                        </div>
                        <div class="d-xl-inline-flex ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-3 my-2 align-content-center">
                            <i class="bi bi-bank text-dark d-none d-xl-block font-weight-bold icon-size-md"></i>&nbsp;
                            <a class="text-dark spin-it" asp-page="/Sources/Index">
                                Sources
                            </a>
                        </div>
                        <div class="d-xl-inline-flex ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-3 my-2 align-content-center">
                            <i class="bi bi-diagram-3 text-dark d-none d-xl-block font-weight-bold icon-size-md"></i>&nbsp;
                            <a class="text-dark spin-it" asp-page="/IncomeCategories">
                                Categories
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="nav bungee row sidebar-heading align-items-center">
                <div class="col-lg-9 col-md-6 nav-link bungee pb-0">
                    <button class="text-primary fakeLink spin-it">
                        Budget
                    </button>
                </div>
                <div class="col-2">
                    <button class="text-primary fakeLink">
                        <i class="bi bi-graph-up text-primary d-none d-xl-block icon-size-xl"></i>
                    </button>
                </div>
            </div>
            <div class="nav bungee row sidebar-heading align-items-center">
                <div class="col-lg-9 col-md-6 nav-link bungee pb-0">
                    <button class="text-primary fakeLink spin-it">
                        <a asp-page="/Settings/Index" class="text-primary spin-it">Settings</a>
                    </button>
                </div>
                <div class="col-2">
                    <button class="text-primary fakeLink" asp-page="/Settings/Index">
                        <a asp-page="/Settings">
                        <i class="bi bi-gear text-primary d-none d-xl-block icon-size-xl"></i>
                        </a>
                    </button>
                </div>
            </div>
        </nav>
        <div class="sidebar-background-color col-md-2 col-lg-2 d-md-block bg-light collapse mx-1"></div>
        <!-- end -->
        <main class="col col-md-10 col-lg-10 d-flex flex-wrap flex-md-nowrap pt-2 border border-bottom-0 rounded-top">
            @await Html.PartialAsync("_LoadingSpinner")
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</body>
</html>