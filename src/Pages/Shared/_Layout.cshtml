<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CashTrack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Bungee&display=swap" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" asp-append-version="true">
    <!-- jQuery UI Autocomplete Dropdown -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
</head>
<body>
    <header>
        <nav sticky="top" class="d-flex justify-content-between flex-md-nowrap p-0 shadow bg-primary">
            <a href="/" class="d-flex justify-content-center navbar-brand col-md-2 col-lg-2 md-0 px-0 py-1">
                <span class="logo text-white pt-1 text-nowrap">Cash Track</span>
            </a>
            <div class="p-2 mx-3">
                <partial name=_LoginPartial />
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="height: 100vh;">
        <div class="row" style="height: 100vh;">
            <!-- sidebar goes here -->
            <nav class="sidebar col-md-2 col-lg-2 d-md-block bg-light collapse pt-3 px-4 sidebar-sticky container">
                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee pb-0">
                        <button type="button" class="text-primary fakeLink" >
                            <a asp-page="/Index" class="text-primary">Dashboard</a>
                        </button>
                    </div>
                    <div class="col-2">
                        <button type="button" class="text-primary fakeLink" asp-page="/Index">
                            <a asp-page="/Index"><i class="bi bi-speedometer2 text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i></a>
                        </button>
                    </div>
                </div>
                <div class="nav bungee row sidebar-heading align-items-center" >

                    <div class="col-lg-9 col-md-6 nav-link bungee pb-0">
                        <button type="button" class="text-primary fakeLink" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#expenseSubLinks">
                            Expenses
                        </button>
                    </div>
                    <div class="col-2 col-md-2 pb-0">
                        <button type="button" class="text-primary fakeLink" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#expenseSubLinks">
                            <i class="bi bi-receipt-cutoff text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </button>
                    </div>
                    <div class="collapse mt-0" id="expenseSubLinks">
                        <div class="mx-0 px-0">
                            <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                                <i class="bi bi-card-list text-dark d-none d-xl-block font-weight-bold" style="font-size: 1rem;"></i>&nbsp;
                                <a class="text-dark" asp-page="/Expenses/Index">
                                    Expense List
                                </a>
                            </div>
                            <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                                <i class="bi bi-shop text-dark d-none d-xl-block font-weight-bold" style="font-size: 1rem;"></i>&nbsp;
                                <a class="text-dark" asp-page="/Merchants">
                                    Merchants
                                </a>
                            </div>
                            <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                                <i class="bi bi-diagram-2 text-dark d-none d-xl-block font-weight-bold" style="font-size: 1rem;"></i>&nbsp;
                                <a class="text-dark" asp-page="/SubCategories">
                                    Sub Categories
                                </a>
                            </div>
                            <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                                <i class="bi bi-diagram-3 text-dark d-none d-xl-block font-weight-bold" style="font-size: 1rem;"></i>&nbsp;
                                <a class="text-dark" asp-page="/MainCategories">
                                    Main Categories
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee pb-0" data-bs-toggle="collapse" data-bs-target="#incomeSubLinks">
                        <button type="button" class="text-primary fakeLink" style="cursor: pointer;" >
                            Income
                        </button>
                    </div>
                    <div class="col-2 pb-0" data-bs-toggle="collapse" data-bs-target="#incomeSubLinks">
                        <button type="button" class="text-primary fakeLink" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#incomeSubLinks">
                            <i class="bi bi-cash-coin text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </button>
                    </div>
                    <div class="collapse" id="incomeSubLinks">
                        <div class="mx-0 px-0">
                            <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                                <i class="bi bi-card-list text-dark d-none d-xl-block font-weight-bold" style="font-size: 1rem;"></i>&nbsp;
                                <a class="text-dark" asp-page="/Income/Index">
                                    Income List
                                </a>
                            </div>
                            <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                                <i class="bi bi-bank text-dark d-none d-xl-block font-weight-bold" style="font-size: 1rem;"></i>&nbsp;
                                <a class="text-dark" asp-page="/IncomeSources">
                                    Sources
                                </a>
                            </div>
                            <div class="ms-xl-5 ms-lg-4 ms-md-3 nav-sub-link bungee me-0 my-2 d-inline-flex align-content-center">
                                <i class="bi bi-diagram-3 text-dark d-none d-xl-block font-weight-bold" style="font-size: 1rem;"></i>&nbsp;
                                <a class="text-dark" asp-page="/IncomeCategories">
                                    Categories
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee pb-0">
                        <button class="text-primary fakeLink" style="cursor: pointer;">
                            Budget
                        </button>
                    </div>
                    <div class="col-2">
                        <button class="text-primary fakeLink" style="cursor: pointer;">
                            <i class="bi bi-graph-up text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </button>
                    </div>
                </div>

                <div class="nav bungee row sidebar-heading align-items-center">
                    <div class="col-lg-9 col-md-6 nav-link bungee pb-0">
                        <button class="text-primary fakeLink" style="cursor: pointer;">
                            Settings
                        </button>
                    </div>
                    <div class="col-2">
                        <button class="text-primary fakeLink" style="cursor: pointer;">
                            <i class="bi bi-gear text-primary d-none d-xl-block" role="img" style="font-size: 1.5rem;"></i>
                        </button>
                    </div>
                </div>
            </nav>

            <!-- end -->
            <div class="col ml-sm-auto my-1 col-md-10 col-lg-10">
                <main role="main" class="d-flex flex-wrap flex-md-nowrap pt-2 border border-bottom-0 rounded-top">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>