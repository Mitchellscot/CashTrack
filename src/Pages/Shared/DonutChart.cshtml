@model CashTrack.Pages.Shared.DonutChart
@{
    var titleExists = string.IsNullOrEmpty(Model.Title);
}
    <script>
        const @Model.VariableName = document.getElementById(@Json.Serialize(@Model.ElementId)).getContext('2d');
        const @Model.ElementId = new Chart(@Model.VariableName, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(@Model.Labels),
                datasets: [{
                    label: 'Total',
                    data: @Model.Dataset,
                    color: 'rgba(0, 0, 0, 0)',
                    backgroundColor: @Html.Raw(Model.Colors),
                    borderColor: @Html.Raw(Model.Colors),
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: @Model.DisplayLabels.ToString().ToLower(),
                        position: 'bottom',
                    },
                    title: {
                        display: @titleExists.ToString().ToLower(),
                        text: '@Model.Title'
                    }
                }
            }
        });
</script>