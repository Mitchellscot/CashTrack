@model CashTrack.Models.IncomeSourceModels.AddEditIncomeSourceModal

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header text-center">
            @{var addOrEdit = Model.IsEdit ? "Edit" : "Add";}
            <h5 class="modal-title w-100">@addOrEdit Income Source</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal">
            </button>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form method="post"
                      asp-page="../Sources/Index"
                      asp-page-handler="AddEditIncomeSourceModal"
                      id="addIncomeSourceForm">
                      <input asp-for="@Model.IsEdit" type="hidden" />
                    <input asp-for="@Model.ReturnUrl" type="hidden" />
                    @if (Model.IsEdit)
                    {
                        <input asp-for="@Model.Id" type="hidden" />
                    }
                    <div class="row mb-3">
                        <div class="col-8">
                            <label class="visually-hidden" asp-for="@Model.Name">Name</label>
                            <div class="input-group">
                                <div class="input-group-text text-center">Name</div>
                                <input data-val="true" asp-for=@Model.Name type="text" class="form-control" id="addIncomeSourceName">
                                <span asp-validation-for="@Model.Name"></span>
                            </div>
                        </div>
                        <div class="col-4 align-self-center border rounded py-1">
                            <div class="form-check form-switch ">
                                <label class="form-check-label" asp-for="@Model.InUse">Suggest On Lookup</label>
                                <input class="form-check-input" type="checkbox" role="switch" id="addIncomeSourceInUse" data-val="true"
                                       asp-for="@Model.InUse" />
                                <span asp-validation-for="@Model.InUse"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3 px-1">
                        <label class="visually-hidden" asp-for="@Model.Description"></label>
                        <textarea class="form-control" asp-for="@Model.Description" id="addIncomeSourceDescription" rows="3" placeholder="Description"></textarea>
                    </div>
                    <span style="color: red;" asp-validation-for="@Model.Description"></span>
                </form>
            </div>
        </div>
        <div class="modal-footer d-flex justify-content-evenly">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <form>
                <button type="submit" class="btn btn-primary" form="addIncomeSourceForm">@addOrEdit Income Source</button>
            </form>
        </div>
    </div>
</div>