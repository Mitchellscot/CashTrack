@using System.Globalization;
@using CashTrack.Common.Extensions;
@model CashTrack.Pages.Shared.TransactionBreakdownModal
@{
    var month = Model.Month > 0 ? @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month) : "";
    var title = Model.Month > 0 && Model.Month <= 12 ? @month + " " + Model.Year.ToString() : Model.Month > 0 ? Model.Year.ToString() : "All Time";
}
<div class="modal fade" id="expenseStats">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    @if (Model.Transactions.Any())
                    {
                        <div class="d-flex justify-content-between">
                        <a asp-page="./print" asp-route-type="transaction" asp-route-year="@Model.Year" asp-route-month="@Model.Month" class="btn btn-primary mb-3">PRINT <i class="bi bi-printer align-self-center icon-button"></i></a>
                        <h5 class="modal-title">@title Expense Breakdown</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal">
                        </button>
                    </div>

                    <table class="table table-borderless border border-3 rounded-4 text-center" >
                        @foreach (var budget in Model.Transactions)
                        {
                            @if (budget.IsMainCategory || budget.MainCategoryId >= int.MaxValue - 1)
                            {
                                @if (budget.Category.IsEqualTo("Income"))
                                {
                                    <tr class="border-top border-bottom border-3 rounded-4 mt-5 border border-end-0 border border-start-0">
                                        <td colspan="4" class="text-center"><h4>Summary</h4></td>
                                    </tr>
                                }
                                <tr class="border-top border-bottom border-3 rounded-4">
                                    <td>
                                        <h6 class="fw-bold">@budget.Category</h6>
                                    </td>
                                    <td class="border-end">
                                        &nbsp;
                                    </td>
                                    <td class="border-end border-top">
                                        @String.Format("{0:n}", budget.Amount)
                                    </td>
                                    <td class="border-top">
                                        @if (budget.Percentage != 0)
                                        {
                                            <span>@budget.Percentage &#37;</span>
                                        }
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr class="border-end border-start">
                                    <td>
                                        &nbsp;
                                    </td>
                                    <td class="border-end">
                                        @budget.Category
                                    </td>
                                    <td class="border-end border-top">
                                        @String.Format("{0:n}", budget.Amount)
                                    </td>
                                    <td class="border-top">
                                        @if (budget.Percentage != 0)
                                        {
                                            <span>@budget.Percentage &#37;</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                }
                else
                {
                    <H4 class="text-center">No expenses data available.</H4>
                }
                </div>
                @if (Model.Transactions.Any())
                {
                    <div class="modal-footer d-flex justify-content-between">
                    <a asp-route-type="transaction" asp-page="./print" asp-route-year="@Model.Year" asp-route-month="@Model.Month" class="btn btn-primary mb-3">PRINT <i class="bi bi-printer align-self-center icon-button"></i></a>
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                    </div>
                }
                else
                {
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    
</div>