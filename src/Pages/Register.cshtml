@page "/register"
@model CashTrack.Pages.Register
@{
    ViewData["Title"] = "Register";
    Layout = "_loginLayout";
}


<div class="col-md-6 offset-md-4 mt-5">
    <div class="col-lg-8 offset-lg-0 border rounded bg-light">
        <div class="d-flex justify-content-center mt-3">
            <img src="\images\cash-track.png" height="200" width="200" alt="Cash Track Logo" />
        </div>
        <div class="container pt-3">

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="text-center form-control" asp-for=@Model.Email placeholder="Email" required />
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="text-center form-control" asp-for=@Model.FirstName placeholder="First Name" required />
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="text-center form-control" asp-for=@Model.LastName placeholder="Last Name" required />
                </div>
                <div class="input-group mb-3">
                    <input asp-for=@Model.Password type="text" class="text-center form-control" placeholder="Password" required />
                </div>
                <div class="d-flex justify-content-center mb-3">
                    <button type="submit" class="btn btn-info">Register</button>
                </div>
            </form>

        </div>
    </div>
</div>
<div className="col-lg-6 offset-lg-3 rounded mt-0">
</div>